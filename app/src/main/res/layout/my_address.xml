<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".navigation.AddAddressActivity">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_add_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add new address"
            android:textColor="#ffffff"
            android:textSize="25sp" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/layout_prop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_add_address"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <EditText
            android:id="@+id/city_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/main_rounded_shape"
            android:hint="City"
            android:inputType="text"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp" />


        <EditText
            android:id="@+id/neighborhood_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/main_rounded_shape"
            android:hint="Neighbourhood"
            android:inputType="text"
            android:maxLength="15"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp" />


        <EditText
            android:id="@+id/post_code_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/main_rounded_shape"
            android:hint="Post code"
            android:inputType="number"
            android:maxLength="4"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp" />


        <EditText
            android:id="@+id/street_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/main_rounded_shape"
            android:hint="Street"
            android:maxLines="1"
            android:maxLength="30"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp" />


        <EditText
            android:id="@+id/number_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Number"
            android:paddingLeft="10dp"
            android:background="@drawable/main_rounded_shape"
            android:inputType="number"
            android:maxLength="3"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />


        <EditText
            android:id="@+id/block_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Block"
            android:maxLength="5"
            android:maxLines="1"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:background="@drawable/main_rounded_shape"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />

        <EditText
            android:id="@+id/floor_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Floor"
            android:paddingLeft="10dp"
            android:background="@drawable/main_rounded_shape"
            android:inputType="number"
            android:maxLength="3"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />


        <EditText
            android:id="@+id/apartament_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Apartment"
            android:paddingLeft="10dp"
            android:background="@drawable/main_rounded_shape"
            android:inputType="number"
            android:maxLength="3"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />

        <Button
            android:id="@+id/add_new_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:background="@drawable/rounded_button"
            android:textAllCaps="false"
            android:text="Add address" />

    </LinearLayout>

    <Button
        android:id="@+id/back_button_add_address"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/back_icon" />

</RelativeLayout>