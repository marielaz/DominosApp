<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"

    tools:context="karikuncheva.dominosapp.RegistrationActivity">

    <ImageView
        android:id="@+id/dominos_iv"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:src="@drawable/logo_dominos" />

    <RelativeLayout
        android:id="@+id/reg_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_rounded_shape"
        android:paddingBottom="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp">


        <TextView
            android:id="@+id/register_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Register"
            android:textColor="@color/colorTitles"
            android:textSize="35sp"
            android:layout_marginTop="10dp"/>


        <EditText
            android:id="@+id/username_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textColorHint="@color/colorHint"
            android:maxLength="25"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/register_tv"/>

        <!-- inputType ???? -->
        <EditText
            android:id="@+id/email_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_reg"
            android:textColorHint="@color/colorHint"
            android:inputType="textEmailAddress"
            android:maxLength="30"
            android:hint="Email"
            android:layout_marginBottom="5dp"/>


        <EditText
            android:id="@+id/password_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:layout_below="@id/email_reg"
            android:inputType="textPassword"
            android:textColorHint="@color/colorHint"
            android:maxLength="25"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/confirm_pass_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:layout_below="@id/password_reg"
            android:textColorHint="@color/colorHint"
            android:maxLength="25" />

        <Button
            android:id="@+id/registration_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_button"
            android:text="Register"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_below="@id/confirm_pass_reg"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"/>

    </RelativeLayout>
</RelativeLayout>
